<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="6"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/clientImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:clickable="false"
        android:src="@drawable/unknown"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/clientImage"
        android:layout_toEndOf="@+id/clientImage"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp">

        <TextView
            android:id="@+id/clientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="8dp"
            android:text="11"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/last_status"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:paddingTop="0dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:text="stat"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/clientName"
            android:layout_alignRight="@+id/clientName"
            android:layout_alignEnd="@+id/clientName"
            android:layout_toRightOf="@+id/clientImage"
            android:layout_toEndOf="@+id/clientImage" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:paddingRight="6dp"
        android:paddingEnd="6dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:text="22-10-2016 11:48"
            android:id="@+id/message_time" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/unread_mesage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="100"
                android:gravity="center"
                android:layout_marginRight="22dp"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:background="@drawable/bg_circle"
                android:textIsSelectable="false"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/clientselected"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:visibility="invisible"
                android:focusable="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:focusableInTouchMode="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>